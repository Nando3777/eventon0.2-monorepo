{
  "extends": "@eventon/config/tsconfig/base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/api.tsbuildinfo",
    "baseUrl": "./",

    // âœ… NestJS / decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    // Aliases to workspace packages
    "paths": {
      "@eventon/shared": ["../../packages/shared/src"],
      "@eventon/shared/*": ["../../packages/shared/src/*"],
      "@eventon/ui": ["../../packages/ui/src"],
      "@eventon/ui/*": ["../../packages/ui/src/*"],
      "@eventon/db": ["../../packages/db/src"],
      "@eventon/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
