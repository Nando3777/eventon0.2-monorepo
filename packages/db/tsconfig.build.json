{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"]
}
